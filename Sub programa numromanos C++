#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int n;
	cout << "Ingrese el numero: ";
	cin >> n;
	int i = 1, a, r;
	while (i <= n)
		i = i * 10;
	do
	{
		i = i / 10;
		if (n == 0)
			r = 8;
		if (n >= 1)
			r = 7;
		if (n > 5)
			r = 6;
		if (n > 10)
			r = 5;
		if (n > 50)
			r = 4;
		if (n > 100)
			r = 3;
		if (n > 500)
			r = 2;
		if (n > 1000)
			r = 1;
		a = n / i;
		n = n - (a*i);
		switch (r)
		{
		case 1: while (a > 0)
		{
			cout << "M";
			a = a - 1;
		}
				break;
		case 2: if (a == 9)
			cout << "CM";
				else {
					cout << "D";
					while (a > 5) {
						cout << "M";
						a = a - 1;
					}
				}break;
		case 3: if (a == 4)
			cout << "CD";
				else {
					if (a == 5)
						cout << "D";
					else {
						while (a > 0)
						{
							cout << "C";
							a = a - 1;
						}
					}
				}break;
		case 4: if (a == 9)
			cout << "XC";
				else {
					cout << "L";
					while (a > 5)
					{
						cout << "X";
						a = a - 1;
					}
				}break;
		case 5: if (a == 4)
			cout << "XL";
				else {
					if (a == 5)
						cout << "L";
					else {
						while (a > 0)
						{
							cout << "X";
							a = a - 1;
						}
					}
				}break;
		case 6: if (a == 9)
			cout << "IX";
				else {
					cout << "V";
					while (a > 5)
					{
						cout << "I";
						a = a - 1;
					}
				}break;
		case 7:if (a == 4)
			cout << "IV";
			   else {
				   if (a == 5)
					   cout << "V";
				   else {
					   while (a > 0)
					   {
						   cout << "I";
						   a = a - 1;
					   }
				   }
			   }break;
		case 8: break;

		}
	} while (n > 0);
	_getch();
}
