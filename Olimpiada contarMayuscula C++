#include "stdafx.h"
#include <iostream>
#include "string"
#include "conio.h"

using namespace std;

void main()
{
	int i, M = 0;
	string p;
	cout << "Ingrese el escrito sin espacios: ";
	cin >> p;
	i = 0;
	while (p[i] != 0)
	{
		if (p[i] >= 'A' && p[i] <= 'Z')
			M = M + 1;
		i++;
	}
	cout << "El numero de mayusculas es: " << M << endl;
	_getch();
}
