#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void fecha_nacimiento(int d, int m, int a);

void main()
{
	int d, m, a;
	cout << "Ingrese la fecha " << endl;
	cout << "Dia: ";
	cin >> d;
	cout << "Mes: ";
	cin >> m;
	cout << "AÃ±o: ";
	cin >> a;
	fecha_nacimiento(d, m, a);
	_getch();
}


void fecha_nacimiento(int d, int m, int a)
{
	bool frag = true;
	if (a > 2017)
		frag = false;
	switch (m)
	{
	case 1: if (d > 31)
		frag = false; break;
	case 2: if (a % 400 == 0 || (a % 4 == 0 && a % 100 != 0)) {
		if (d > 29)
			frag = false;
	}
			else {
				if (d > 28)
					frag = false;
			} break;
	case 3: if (d > 31)
		frag = false; break;
	case 4: if (d > 30)
		frag = false; break;
	case 5: if (d > 31)
		frag = false; break;
	case 6: if (d > 30)
		frag = false; break;
	case 7: if (d > 31)
		frag = false; break;
	case 8: if (d > 31)
		frag = false; break;
	case 9: if (d > 30)
		frag = false; break;
	case 10: if (d > 31)
		frag = false; break;
	case 11: if (d > 30)
		frag = false; break;
	case 12: if (d > 31)
		frag = false; break;
	default:
		frag = false; break;
	}
	if (frag == false)
		cout << "Fecha invalida";
	else
		cout << "Fecha valida";
}
